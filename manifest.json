{
  "manifest_version": 3,
  "name": "Focalize",
  "version": "0.1.0",
  "version_name": "0.1.0-alpha",
  "description": "Extension for Lens Protocol",
  "permissions": [
    "activeTab", "scripting", "storage"
  ],
  "options_page": "src/options/index.html",
  "action": {
    "default_title": "Share on Lens"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "host_permissions": [
    "https://api-mumbai.lens.dev/*",
    "https://api.lens.dev/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; connect-src https://api.lens.dev ws://localhost:3000 http://localhost:3000; object-src 'self'; frame-ancestors 'none';"
  }
}